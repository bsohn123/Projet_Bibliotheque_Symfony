{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section class="row justify-content-center">
        <div class="col-lg-6 col-xl-5">
            <div class="card-elevated p-4 p-lg-5">
                <span class="tag">Créer un compte</span>
                <h1 class="mt-3 mb-2">Inscription</h1>
                <p class="text-muted">Rejoignez la bibliothèque et gérez vos emprunts facilement.</p>

                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm, { attr: { class: 'mt-4' } }) }}
                    {{ form_row(registrationForm.email, {
                        row_attr: { class: 'mb-3' },
                        label: 'Email',
                        attr: { class: 'form-control' }
                    }) }}
                    {{ form_row(registrationForm.plainPassword, {
                        row_attr: { class: 'mb-3' },
                        label: 'Mot de passe',
                        attr: { class: 'form-control' }
                    }) }}
                    {{ form_row(registrationForm.agreeTerms, {
                        row_attr: { class: 'mb-4' },
                        label: 'J’accepte les conditions'
                    }) }}

                    <button type="submit" class="btn btn-accent w-100">Créer mon compte</button>
                {{ form_end(registrationForm) }}

                <div class="text-center text-muted small mt-3">
                    Déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
