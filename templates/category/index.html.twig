{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <section class="card-elevated p-4 p-lg-5">
        <div class="d-flex flex-wrap justify-content-between align-items-center gap-3">
            <div>
                <span class="tag">Catalogue</span>
                <h1 class="mt-3 mb-1">Catégories</h1>
                <p class="text-muted mb-0">Explorez nos univers de lecture.</p>
            </div>

            {% if is_granted('ROLE_ADMIN') %}
                <a class="btn btn-accent" href="{{ path('app_category_new') }}">Ajouter une catégorie</a>
            {% endif %}
        </div>

        <div class="table-responsive mt-4">
            <table class="table align-middle">
                <thead class="table-light">
                <tr>
                    <th class="d-none">Id</th>
                    <th>Nom</th>
                    <th class="d-none">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td class="d-none">{{ category.id }}</td>
                        <td class="fw-semibold">{{ category.name }}</td>
                        <td class="d-none">
                            <a href="{{ path('app_category_show', {'id': category.id}) }}">show</a>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucune catégorie.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>
{% endblock %}
